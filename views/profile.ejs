<html lang="en">

<%- include("./partials/head.ejs") %>

<body>
    <%- include("./partials/nav.ejs") %>

    <main role="main" class="container">
        <img src="<%= profile_user.image %>" alt="<%= profile_user.googleId %>" height="50px" width="50px">
        <h1> <%= profile_user.displayName %></h1>
        <% let i = 0 %>
        <% drawings.forEach(drawing => { %>
            <% i++; %>
            <div class="drawing">
                <p><img src="<%= drawing.avatar%>" height="25px" width="25px"/> <b><%= drawing.name %></b> drew: </p>
                <img id="drawing<%= i %>" src="<%= drawing.src %>" height="150px" width="150px"/> <br />                    
                <a href="/like/<%= drawing._id %>">
                    <!-- <img src="heart.png" height="25px" width="25px" /> -->
                    <%= drawing.likes %>
                </a>
            </div> 
        <% }) %>   
    </main>
</body>

</html>
