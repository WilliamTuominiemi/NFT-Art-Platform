<html lang="en">

<%- include("./partials/head.ejs") %>

<body>
    <%- include("./partials/nav.ejs") %>

    <main role="main" class="container">
        <div class="card-body">
            <h3 class="card-title">Blockchain</h3>
            <p class="card-text"><a href="/blockchain">View</a> blockchain</p>
        </div>
        <div class="card-body">
            <div class="drawings">
                <h3 class="card-title"> Drawings</h3>
                <div class="card-body">
                    <p class="card-text"> Sort by <a class="btn btn-dark" href="/">most liked</a> <a class="btn btn-dark" href="/new">newest first</a> <a class="btn btn-dark" href="/old">oldest first</a></p>
                </div>
            </div>
            <% drawings.forEach(drawing => { %>
                <div class="drawing">
                    <p><a href="/user/<%= drawing.owner_googleId %>"><img src="<%= drawing.owner_avatar%>" height="25px" width="25px"/><b> <%= drawing.owner_displayName %></b> </a><br /> owns: </p>
                    <a href="/drawing/<%= drawing._id%>"><img  src="<%= drawing.src %>" height="150px" width="150px"/> </a><br />                 
                    <a href="/like/<%= drawing._id %>"><img src="heart.png" height="25px" width="25px"></img></a> <%= drawing.likes %>
                </div> 
            <% }) %>   
        </div>
    </main>
</body>

</html>
