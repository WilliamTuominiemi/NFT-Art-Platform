<html lang="en">

<%- include("./partials/head.ejs") %>

<body>
    <%- include("./partials/nav.ejs") %>

    <main role="main" class="container">
        <div class="drawings">
            <% let i = 0 %>
            <% drawings.forEach(drawing => { %>
                <% i++; %>
                <div class="drawing">
                    <p><img src="<%= drawing.avatar%>" height="25px" width="25px"/> <b><%= drawing.name %></b> drew: </p>
                    <img id="drawing<%= i %>" src="<%= drawing.src %>" height="150px" width="150px"/> <br />             
                    <div class="likeContainer">
                        <img src="heart.png" height="25px" width="25px">
                        <div class="centered"><%= drawing.likes %></div>
                    </div>       
                    <a href="/like/<%= drawing._id %>"><img src="heart.png" height="25px" width="25px"><%= drawing.likes %></img> </a>
                </div> 
            <% }) %>   
        </div>
    </main>
</body>

</html>
