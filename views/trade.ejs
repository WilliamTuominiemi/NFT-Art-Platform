<html lang="en">

<%- include("./partials/head.ejs") %>

<body>
    <%- include("./partials/nav.ejs") %>

    <main role="main" class="container">
        <form action="/trade/<%= receiver.googleId%>" method="POST">
            <div class="items">
                <div class="myItems">
                    <p><img src="<%= user.image %>" height="20px" width="20px"/><a href="/user/<%= user.googleId %>"> <%= user.displayName %></a></p>
                    <p><b>your: </b></p>
                    <% user_drawings.forEach(drawing => { %>
                        <div class="trade_drawing">
                            <% if(!drawing.in_trade) { %>
                                <img  src="<%= drawing.src %>" height="50px" width="50px"/>   
                                <input type="checkbox" id="sender_drawings" value="<%= drawing._id %>" name="sender_drawings">
                            <% } else   { %>
                                <p><img class="grey-out-img" src="<%= drawing.src %>" height="50px" width="50px"/> In another trade</p>
                            <% } %>  

                            
                        </div>
                    <% }) %>   
                </div>
                <br />
                <div class="theirItems">
                    <p><img src="<%= receiver.image %>" height="20px" width="20px"/><a href="/user/<%= receiver.googleId %>"> <%= receiver.displayName %></a></p>
                    <p><b>for their: </b></p>
                    <% receiver_drawings.forEach(drawing => { %>
                        <div class="trade_drawing">
                            <% if(!drawing.in_trade) { %>
                                <img src="<%= drawing.src %>" height="50px" width="50px"/>      
                                <input type="checkbox" id="receiver_drawings" value="<%= drawing._id %>" name="receiver_drawings">
                            <% } else   { %>
                                <p><img class="grey-out-img" src="<%= drawing.src %>" height="50px" width="50px"/> In another trade</p>
                            <% } %>  
                    </div>    
                    <% }) %>   
                </div>
            </div>
            <div class="form-group">
                <br /><p> Make sure to read the <a href="/rules" target="_blank">rules</a> about trading.</p>
                <button type="submit" class="btn btn-dark">Send offer</button>
            </div>         
        </form>

            
    </main>
</body>

</html>
