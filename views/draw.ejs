<html lang="en">
    <head>
        <!-- Bootstrap CSS -->
        <link
            rel="stylesheet"
            href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
            integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
            crossorigin="anonymous"
        />

        <link rel="stylesheet" type="text/css" href="css/style.css" />

        
    </head>
    <body>
        <script type="text/javascript" src="/javascript/draw.js"></script>

        <div class="capture">
            <canvas class="canvas" id="canvas" height="500px" width="500px" style="padding: 10px; border: 2px solid black;"></canvas>
        </div>
        
        
        <div id="image">
            <img id="painting"/>
        </div>

        <br />


        <button class="btn btn-dark" onclick="changeColor(0)">Black</button>
        <button class="btn btn-danger" onclick="changeColor(1)">Red</button>
        <button class="btn btn-primary" onclick="changeColor(2)">Blue</button>
        <input id="hex_color" type="text" value="" placeholder="#000000" />
        <button class="btn btn-dark" onclick="customColor()">Save custom color</button>

        <br />
        <br />

        <button class="btn btn-secondary" onclick="changeColor('eraser')">Eraser</button>

        <br />
        <br />

        Thickness: <input id="thickness_slider" type="range" min="1" max="100" value="5">

        <br />
        <br />

        <button class="btn btn-dark" onclick="toImage()" >Save image</button> 

        <div id="submit_button" style="visibility: hidden;">
            <br /><p> Make sure to read the <a href="/rules" target="_blank">rules</a> before posting!</p>

            <form action="/drawing/new" method="POST">
                <div class="form-group">
                    <input type="hidden" id="src" value="" name="src" required>
                    <input type="hidden" id="googleId" value="<%= user.googleId %>" name="googleId" required>
                    <input type="hidden" id="name" value="<%= user.displayName %>" name="name" required>
                    <input type="hidden" id="avatar" value="<%= user.image %>" name="avatar" required>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-dark">Post</button>
                </div>
            </form>
        </div>  
    </body>
</html>
